.addCommOutter{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.addCommWrapper{
  width: 90%;
}

.commentTitle{
  font-size: 50rpx;
  font-weight: bold;
  margin:10rpx 0rpx;
}

.commentInstruction{
  font-size: 32rpx;
  margin: 20rpx 0rpx;
}

.commentWarning{
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0rpx;
  background-color: rgba(255, 0, 0, 0.4);
}

.commentArea{
  width: 100%;
  border: 1rpx solid black;
}

